<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center"
    >

    <!--
        TextView android:text="Enter a name for this map:"
        android:layout_width="300sp"
        android:layout_height="wrap_content"

        android:hint="Enter a name for this map:"
       -->

    <EditText android:id="@+id/name_editor"
        android:hint="请输入你想要保存地图的名称："
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="text"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center" >

        <Button android:text="确定"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginRight="25dp"
            android:id="@+id/certain_button"/>

        <Button android:text="取消"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:id="@+id/cancel_button"/>

    </LinearLayout>


</LinearLayout>